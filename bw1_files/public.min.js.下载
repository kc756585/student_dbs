$(document).ready(function() {
	var root = '';
	$("#search-btn1").click(function() {
		goSearch();
	});
	$('#search-input1').keypress(function(event) {
		var key = event.which;
		if (key == 13) {
			goSearch();
		}
	});
	var goSearch = function() {
		var q = $('#search-input1').val();
		var pathname = window.location.pathname;
		var search = window.location.search;
		if (q) {
			if (pathname.indexOf('/search') >= 0 && search.indexOf('?q=') >= 0) {
				textFieldSearch(q);
			} else {
				window.location.href = root + '/search?q=' + q;
			}
		}
	}

//	$.getScript("https://s17.cnzz.com/stat.php?id=1256217199");
	$(".backtotop").click(function() {
		jQuery('body,html').animate({
			scrollTop : 0
		}, 1000);
		return false;
	});
	var tplId = $('#tplId').val();
	var fixNav = function(top) {
		if (top > 180) {
			$('.gotop').show(500);
		} else {
			$('.gotop').hide(500);
		}

		var sideNav = $('.boxL .block10');
		var a = $('.section09').height();
		var b = $('.boxL .block10').height();
		var h = a - b + 410;
		if (tplId != 8 && tplId != 7 && tplId != 12) {
			if (sideNav) {
				if (top > 403 && top < h) {
					sideNav.addClass('side-nav-fixed');
				} else {
					sideNav.removeClass('side-nav-fixed');
				}
			}
		}
	}
	$(window).scroll(function() {
		var me = $(window);
		var top = me.scrollTop();
		fixNav(top);
	});

	var hideSubMenu = $('.block10 .clickTabs .tabBlock');
	for (var i = 0; i < hideSubMenu.length; i++) {
		var subMenu = hideSubMenu[i];
		var length = $(subMenu).children().length;
		if (length == 0) {
			$(subMenu).prev().find('i').remove();
		}
	}
	//校长信箱居中
	$('.mailbox').height($(document).height());
	var w = $(document).width();
	$('.mailform').attr('style', 'left:' + (w / 2 - 260) + 'px;');

	var width;
	var resetWidth = function(el) {
		if (width < 1200) {
			width = 1200;
		}
		var obj = $(el);
		if (obj.length > 0) {
			obj.width(width);
		}
	}
	$(window).bind("resize", function(event) {
		resetAll();
	});
	var resetAll = function() {
		width = $(window).width();
		resetWidth('.header');
		resetWidth('.section02');
		resetWidth('.section03');
		resetWidth('.section04');
		resetWidth('.section06');
		resetWidth('.section07');
		resetWidth('.section08');
		resetWidth('.section09');
		resetWidth('.section10 ');
		resetWidth('.section13 ');
		resetWidth('.section22');
		resetWidth('.section23');
		resetWidth('.slide-row');
		resetWidth('#feature_images li');
		resetWidth('#main-nav-box-fix');
		resetWidth('.slide-title-wrap');
		resetWidth('.hideMue');
		resetWidth('.fixMue1');
		resetWidth('.mailbox');
		resetWidth('#overlay');
	}
	resetAll();
})

var subscription = function(email) {
	var email = document.getElementById('subscriptionEmail').value;
	if(!email){
		alert('请输入您的邮箱地址！');
		return false;
	}
	$("body").mask("正在订阅...");
	$.ajax({
		url : '/subscription',
		data : {
			email : email
		},
		success : function(data, textStatus, jqXHR) {
			var success = data['success'];
			if(success){
				alert('您已成功订阅！');
			}else{
				alert(data['msg']);
			}
		},
		complete : function() {
			$("body").unmask();
		}
	});
	return false;
}
